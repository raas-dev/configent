#asdf plugin add ruby
#asdf plugin add java
#asdf plugin add stack

#asdf install rust
#asdf install golang
#asdf install nodejs
#asdf install python
#asdf install ruby
#asdf install java
#BOOTSTRAP_HASKELL_NONINTERACTIVE=true asdf install stack
