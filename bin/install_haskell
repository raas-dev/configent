# shellcheck disable=SC1091  # do not expect input files

trap "printf '\nCaught ^C from user - exiting now\n' ; exit 130" INT

### asdf #######################################################################

export ASDF_DIR="$HOME/.asdf"
git clone --depth 1 --branch v0.14.1 \
  https://github.com/asdf-vm/asdf.git "$ASDF_DIR"
ASDF_FORCE_PREPEND=yes . "$ASDF_DIR/asdf.sh"

### stack ######################################################################

asdf plugin add stack
BOOTSTRAP_HASKELL_NONINTERACTIVE=true asdf install stack

### cabal ######################################################################

[ -r "$HOME/.ghcup/env" ] && . "$HOME/.ghcup/env"

#cabal install <package>
