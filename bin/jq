# Wrap jaq as jq for non-interactive shells

# shellcheck disable=SC2068  # not quoting args
if command -v jaq >/dev/null; then
  jaq $@
else
  # avoid infinite loop
  this_path="$(cd "$(dirname "$0")" && pwd)"
  PATH="${PATH#"$this_path"}"
  jq $@
fi
