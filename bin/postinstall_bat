### constants ##################################################################

this_path=$(cd "$(dirname "$0")" && pwd)
backup_path="$this_path/../.backup"
config_path="$HOME/.config/configent"

### configs ####################################################################

# themes dir
if [ ! -r "$backup_path/.config/bat/themes" ]; then
  if [ -r "$HOME/.config/bat/themes" ]; then
    mkdir -p "$backup_path/.config/bat"
    cp -RP "$HOME/.config/bat/themes" "$backup_path/.config/bat/themes"
  fi
fi
mkdir -p "$HOME/.config/bat/themes"
rm -rf "$HOME/.config/bat/themes"
ln -sfnv "$config_path/themes" "$HOME/.config/bat/themes"

### bat binary cache for themes ################################################

command -v mise >/dev/null && mise exec bat -- bat cache --build
