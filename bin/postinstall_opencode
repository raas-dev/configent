### constants ##################################################################

this_path=$(cd "$(dirname "$0")" && pwd)
backup_path="$this_path/../.backup"
config_path="$HOME/.config/configent"

### configs ####################################################################

# opencode.jsonc
if [ ! -r "$backup_path/.config/opencode/opencode.jsonc" ]; then
  if [ -r "$HOME/.config/opencode/opencode.jsonc" ]; then
    mkdir -p "$backup_path/.config/opencode"
    cp -P "$HOME/.config/opencode/opencode.jsonc" \
      "$backup_path/.config/opencode/opencode.jsonc"
  fi
fi
mkdir -p "$HOME/.config/opencode"
ln -sfnv "$config_path/opencode/opencode.jsonc" "$HOME/.config/opencode/opencode.jsonc"

# AGENTS.md
if [ ! -r "$backup_path/.config/agents/AGENTS.md" ]; then
  if [ -r "$HOME/.config/opencode/AGENTS.md" ]; then
    mkdir -p "$backup_path/.config/opencode"
    cp -P "$HOME/.config/opencode/AGENTS.md" \
      "$backup_path/.config/opencode/AGENTS.md"
  fi
fi
mkdir -p "$HOME/.config/opencode"
ln -sfnv "$config_path/AGENTS.md" "$HOME/.config/opencode/AGENTS.md"

# agents dir
if [ ! -r "$backup_path/.config/agents" ]; then
  if [ -r "$HOME/.config/opencode/agents" ]; then
    mkdir -p "$backup_path/.config/agents"
    cp -RP "$HOME/.config/opencode/agents" \
      "$backup_path/.config/agents"
  fi
fi
mkdir -p "$HOME/.config/opencode/agents"
rm -rf "$HOME/.config/opencode/agents"
ln -sfnv "$config_path/opencode/agents" "$HOME/.config/opencode/agents"

# commands dir
if [ ! -r "$backup_path/.config/commands" ]; then
  if [ -r "$HOME/.config/opencode/commands" ]; then
    mkdir -p "$backup_path/.config/commands"
    cp -RP "$HOME/.config/opencode/commands" \
      "$backup_path/.config/commands"
  fi
fi
mkdir -p "$HOME/.config/opencode/commands"
rm -rf "$HOME/.config/opencode/commands"
ln -sfnv "$config_path/opencode/commands" "$HOME/.config/opencode/commands"

# skills dir
if [ ! -r "$backup_path/.config/skills" ]; then
  if [ -r "$HOME/.config/opencode/skills" ]; then
    mkdir -p "$backup_path/.config/skills"
    cp -RP "$HOME/.config/opencode/skills" \
      "$backup_path/.config/skills"
  fi
fi
mkdir -p "$HOME/.config/opencode/skills"
rm -rf "$HOME/.config/opencode/skills"
ln -sfnv "$config_path/opencode/skills" "$HOME/.config/opencode/skills"

# profiles dir
if [ ! -r "$backup_path/.config/profiles" ]; then
  if [ -r "$HOME/.config/opencode/profiles" ]; then
    mkdir -p "$backup_path/.config/profiles"
    cp -RP "$HOME/.config/opencode/profiles" \
      "$backup_path/.config/profiles"
  fi
fi
mkdir -p "$HOME/.config/opencode/profiles"
rm -rf "$HOME/.config/opencode/profiles"
ln -sfnv "$config_path/opencode/profiles" "$HOME/.config/opencode/profiles"
