### constants ##################################################################

this_path=$(cd "$(dirname "$0")" && pwd)
backup_path="$this_path/../.backup"
config_path="$HOME/.config/configent"

### configs ####################################################################

# opencode.jsonc
if [ ! -r "$backup_path/.config/opencode/opencode.jsonc" ]; then
  if [ -r "$HOME/.config/opencode/opencode.jsonc" ]; then
    mkdir -p "$backup_path/.config/opencode"
    cp -P "$HOME/.config/opencode/opencode.jsonc" \
      "$backup_path/.config/opencode/opencode.jsonc"
  fi
fi
mkdir -p "$HOME/.config/opencode"
ln -sfnv "$config_path/opencode/opencode.jsonc" "$HOME/.config/opencode/opencode.jsonc"

# AGENTS.md (from claude-code)
if [ ! -r "$backup_path/.config/agents/AGENTS.md" ]; then
  if [ -r "$HOME/.config/opencode/AGENTS.md" ]; then
    mkdir -p "$backup_path/.config/opencode"
    cp -P "$HOME/.config/opencode/AGENTS.md" \
      "$backup_path/.config/opencode/AGENTS.md"
  fi
fi
mkdir -p "$HOME/.config/opencode"
ln -sfnv "$config_path/claude-code/AGENTS.md" "$HOME/.config/opencode/AGENTS.md"

# agent dir (from claude-code, note singular in the target dir name)
if [ ! -r "$backup_path/.config/opencode/agent" ]; then
  if [ -r "$HOME/.config/opencode/agent" ]; then
    mkdir -p "$backup_path/.config/opencode"
    cp -RP "$HOME/.config/opencode/agent" \
      "$backup_path/.config/opencode/agent"
  fi
fi
mkdir -p "$HOME/.config/opencode/agent"
rm -rf "$HOME/.config/opencode/agent"
ln -sfnv "$config_path/claude-code/agents" "$HOME/.config/opencode/agent"

# command dir (from claude-code, note singular in the target dir name)
if [ ! -r "$backup_path/.config/opencode/command" ]; then
  if [ -r "$HOME/.config/opencode/command" ]; then
    mkdir -p "$backup_path/.config/opencode"
    cp -RP "$HOME/.config/opencode/command" \
      "$backup_path/.config/opencode/command"
  fi
fi
mkdir -p "$HOME/.config/opencode/command"
rm -rf "$HOME/.config/opencode/command"
ln -sfnv "$config_path/claude-code/commands" "$HOME/.config/opencode/command"

# skills dir (from claude-code)
if [ ! -r "$backup_path/.config/opencode/skills" ]; then
  if [ -r "$HOME/.config/opencode/skills" ]; then
    mkdir -p "$backup_path/.config/opencode"
    cp -RP "$HOME/.config/opencode/skills" \
      "$backup_path/.config/opencode/skills"
  fi
fi
mkdir -p "$HOME/.config/opencode/skills"
rm -rf "$HOME/.config/opencode/skills"
ln -sfnv "$config_path/claude-code/skills" "$HOME/.config/opencode/skills"
