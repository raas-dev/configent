### constants ##################################################################

this_path=$(cd "$(dirname "$0")" && pwd)
backup_path="$this_path/../.backup"
config_path="$HOME/.config/configent"

### configs ####################################################################

# opencode.jsonc
if [ ! -r "$backup_path/.config/opencode/opencode.jsonc" ]; then
  if [ -r "$HOME/.config/opencode/opencode.jsonc" ]; then
    mkdir -p "$backup_path/.config/opencode"
    cp -P "$HOME/.config/opencode/opencode.jsonc" \
      "$backup_path/.config/opencode/opencode.jsonc"
  fi
fi
mkdir -p "$HOME/.config/opencode"
ln -sfnv "$config_path/opencode/opencode.jsonc" "$HOME/.config/opencode/opencode.jsonc"
