# Workaround to skip the broken cursor binary symlink created by Homebrew cask

# Fixes Cursor startup on macOS ARM (2024-08)
brew_cursor_bin_path="/Applications/Cursor.app/Contents/Resources/app/bin/code"

# shellcheck disable=SC2068  # not quoting args
if [ -x "$brew_cursor_bin_path" ]; then
  "$brew_cursor_bin_path" $@
else
  # avoid infinite loop
  this_path="$(cd "$(dirname "$0")" && pwd)"
  PATH="${PATH#"$this_path"}"
  cursor $@
fi
