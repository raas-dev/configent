# Workaround a broken Cursor symlink created by Homebrew macOS ARM (2024-08)

# shellcheck disable=SC2068  # not quoting args

if [ "$(uname -s)" = 'Darwin' ]; then
  if [ -x "/Applications/Cursor.app/Contents/Resources/app/bin/code" ]; then
    /Applications/Cursor.app/Contents/Resources/app/bin/code $@
  else
    echo "Error: Cursor is not found in Applications."
    exit 127
  fi
else
  # avoid infinite loop
  this_path="$(cd "$(dirname "$0")" && pwd)"
  PATH="${PATH#"$this_path"}"
  cursor $@
fi
