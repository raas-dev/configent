### constants ##################################################################

carapace_dir="$HOME/.local/share/carapace"

### carapace ###################################################################

git clone --depth 1 https://github.com/carapace-sh/carapace-bin \
  "$carapace_dir" ||
  git -C "$carapace_dir" pull --no-autostash

(cd "$carapace_dir/cmd/carapace" && go generate ./... && go install)
