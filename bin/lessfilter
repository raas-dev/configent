#!/bin/sh

mime=$(file -bL --mime-type "$1")
category=${mime%%/*}

if command -v lsd >/dev/null && [ -d "$1" ]; then
  lsd -A --group-dirs first --oneline --color=always "$1"
elif command -v bat >/dev/null && [ "$category" = text ]; then
  bat --color=always --theme=base16 --style=plain "$1"
else
  sh -t lesspipe.sh "$1"
fi
