# Extends lesspipe.sh by user defined filters

has_cmd() {
  command -v "$1" >/dev/null
}

mime=$(file -bL --mime-type "$1")
category=${mime%%/*}

if has_cmd lsd && [ -d "$1" ]; then
  lsd -A --group-dirs first --oneline --color=always "$1"
elif has_cmd bat && [ "$category" = text ]; then
  # colorize any text file always, something which lesspipe.sh does not do
  bat --color=always --style=plain --paging=never "$1"
else
  # any non-zero exit code leaves the filtering to lesspipe.sh
  exit 1
fi
