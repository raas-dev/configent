#!/bin/sh

# configent (https://github.com/raas-dev/configent)
# One command automated macOS/Linux laptop/VM/container bootstrapper.
#
# Copyright(C) 2016- Anssi SyrjÃ¤salo (http://a.syrjasalo.com)
# Licensed under GNU Lesser General Public License v3 (LGPL-3.0).

trap "printf '\nCaught ^C from user - exiting now\n' ; exit 130" INT

eval_brew() {
  if [ -x "/opt/homebrew/bin/brew" ]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
  elif [ -x "/usr/local/bin/brew" ]; then
    eval "$(/usr/local/bin/brew shellenv)"
  elif [ -x "/home/linuxbrew/.linuxbrew/bin/brew" ]; then
    eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
  elif [ -x "$HOME/.linuxbrew/bin/brew" ]; then
    eval "$("$HOME"/.linuxbrew/bin/brew shellenv)"
  fi
}
eval_brew

if ! command -v brew >/dev/null; then
  # nosemgrep: bash.curl.security.curl-pipe-bash.curl-pipe-bash
  NONINTERACTIVE=true HOMEBREW_INSTALL_FROM_API=true \
    bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
  eval_brew
fi

# Zsh
brew install zsh

# Cross-platform make is often required by packages with non-native deps
brew install cmake

# Install newer OpenSSL, 1.1 has reached EOL 2023 (brew disabled it 2024-10-24)
brew install openssl

# GNU bins prepended to PATH in .profile
brew install coreutils
brew install findutils
#brew install gnu-getopt
#brew install gnu-indent
#brew install gnu-sed
#brew install gnu-tar
#brew install gnu-time
#brew install gnu-which

# GNU bins NOT prepended to PATH in .profile
brew install gawk
brew install grep

# More recent git than in Xcode Command Line Tools
brew install git

# Git extension for versioning large files
brew install git-lfs

# Git extra commands (https://github.com/tj/git-extras)
brew install git-extras

# The logfile navigator (https://github.com/tstack/lnav)
brew install lnav

# Swiss Army Knife for macOS (https://github.com/rgcr/m-cli)
brew install m-cli

# Mac App Store command-line interface (https://github.com/mas-cli/mas)
brew install mas

# Internet traffic monitor (https://github.com/GyulyVGC/sniffnet)
brew install sniffnet

# Maintained ctags implementation
brew install universal-ctags

# For compiling language versions (mise)
brew install xz

# For hurl
brew install pkg-config

# For speech-to-text
brew install portaudio
# brew install ffmpeg
