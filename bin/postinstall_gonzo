### constants ##################################################################

this_path=$(cd "$(dirname "$0")" && pwd)
backup_path="$this_path/../.backup"
config_path="$HOME/.config/configent"

### skins ######################################################################

# skins dir
if [ ! -r "$backup_path/.config/gonzo/skins" ]; then
  if [ -r "$HOME/.config/gonzo/skins" ]; then
    mkdir -p "$backup_path/.config/gonzo"
    cp -RP "$HOME/.config/gonzo/skins" "$backup_path/.config/gonzo/skins"
  fi
fi
mkdir -p "$HOME/.config/gonzo"
rm -rf "$HOME/.config/gonzo/skins"
ln -sfnv "$config_path/gonzo/skins" "$HOME/.config/gonzo/skins"
