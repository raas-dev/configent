#!/bin/sh

# configent (https://github.com/raas-dev/configent)
# One command automated macOS/Linux laptop/VM/container bootstrapper.
#
# Copyright(C) 2016- Anssi SyrjÃ¤salo (http://a.syrjasalo.com)
# Licensed under GNU Lesser General Public License v3 (LGPL-3.0).

# shim for running `nerdctl` in lima VM

: "${NAME:="default"}"
: "${TEMPLATE:="ubuntu_rootful"}"

if [ "$(uname -s)" = 'Darwin' ]; then
  if ! command -v limactl >/dev/null; then
    echo "Error: limactl not found on macOS, cannot start Linux VM for nerdctl."
    exit 127
  fi
  # start VM if not running
  if ! limactl list --json | grep -q "\"$NAME\".*\"status\": *\"Running\""; then
    limactl start --name "$NAME" "$HOME/.config/configent/lima/$TEMPLATE.yaml" --tty=false --vm-type=vz --network=vzNAT --set=".env.GITHUB_TOKEN = \"$GITHUB_TOKEN\"" ||
      limactl start --name "$NAME" --network=vzNAT --set=".env.GITHUB_TOKEN = \"$GITHUB_TOKEN\""
  fi
  # pass arguments to this exact same script on the guest VM
  limactl shell "$NAME" ~/configent/bin/nerdctl "$@"
else
  # shellcheck disable=SC2155  # will not declare separately
  [ -z "$XDG_RUNTIME_DIR" ] && export XDG_RUNTIME_DIR="/run/user/$(id -u)"
  if [ -x "$HOME/bin/nerdctl" ]; then
    "$HOME/bin/nerdctl" "$@"
  elif [ -x "/usr/local/bin/nerdctl" ]; then
    "/usr/local/bin/nerdctl" "$@"
  else
    echo "Error: nerdctl not found in this Linux system."
    exit 127
  fi
fi
