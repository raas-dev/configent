### constants ##################################################################

this_path=$(cd "$(dirname "$0")" && pwd)
backup_path="$this_path/../.backup"
config_path="$HOME/.config/configent"

### configs ####################################################################

# settings.json
if [ ! -r "$backup_path/.claude/settings.json" ]; then
  if [ -r "$HOME/.claude/settings.json" ]; then
    mkdir -p "$backup_path/.claude"
    cp -P "$HOME/.claude/settings.json" "$backup_path/.claude/settings.json"
  fi
fi
mkdir -p "$HOME/.claude"
ln -sfnv "$config_path/claude-code/settings.json" "$HOME/.claude/settings.json"

# CLAUDE.md
if [ ! -r "$backup_path/.claude/CLAUDE.md" ]; then
  if [ -r "$HOME/.claude/CLAUDE.md" ]; then
    mkdir -p "$backup_path/.claude"
    cp -P "$HOME/.claude/CLAUDE.md" "$backup_path/.claude/CLAUDE.md"
  fi
fi
mkdir -p "$HOME/.claude"
ln -sfnv "$config_path/AGENTS.md" "$HOME/.claude/CLAUDE.md"

# commands dir
if [ ! -r "$backup_path/.claude/commands" ]; then
  if [ -r "$HOME/.claude/commands" ]; then
    mkdir -p "$backup_path/.claude"
    cp -RP "$HOME/.claude/commands" "$backup_path/.claude/commands"
  fi
fi
mkdir -p "$HOME/.claude/commands"
rm -rf "$HOME/.claude/commands"
ln -sfnv "$config_path/claude-code/commands" "$HOME/.claude/commands"

# agents dir
if [ ! -r "$backup_path/.claude/agents" ]; then
  if [ -r "$HOME/.claude/agents" ]; then
    mkdir -p "$backup_path/.claude"
    cp -RP "$HOME/.claude/agents" "$backup_path/.claude/agents"
  fi
fi
mkdir -p "$HOME/.claude/agents"
rm -rf "$HOME/.claude/agents"
ln -sfnv "$config_path/claude-code/agents" "$HOME/.claude/agents"

# skills dir
if [ ! -r "$backup_path/.claude/skills" ]; then
  if [ -r "$HOME/.claude/skills" ]; then
    mkdir -p "$backup_path/.claude"
    cp -RP "$HOME/.claude/skills" "$backup_path/.claude/skills"
  fi
fi
mkdir -p "$HOME/.claude/skills"
rm -rf "$HOME/.claude/skills"
ln -sfnv "$config_path/claude-code/skills" "$HOME/.claude/skills"
