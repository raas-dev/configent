### constants ##################################################################

this_path=$(cd "$(dirname "$0")" && pwd)
backup_path="$this_path/../.backup"
config_path="$HOME/.config/configent"

### configs ####################################################################

# settings.json
if [ ! -r "$backup_path/.claude/settings.json" ]; then
  if [ -r "$HOME/.claude/settings.json" ]; then
    mkdir -p "$backup_path/.claude"
    cp -P "$HOME/.claude/settings.json" "$backup_path/.claude/settings.json"
  fi
fi
mkdir -p "$HOME/.claude"
ln -sfnv "$config_path/claude-code/settings.json" "$HOME/.claude/settings.json"

# CLAUDE.md
if [ ! -r "$backup_path/.claude/CLAUDE.md" ]; then
  if [ -r "$HOME/.claude/CLAUDE.md" ]; then
    mkdir -p "$backup_path/.claude"
    cp -P "$HOME/.claude/CLAUDE.md" "$backup_path/.claude/CLAUDE.md"
  fi
fi
mkdir -p "$HOME/.claude"
ln -sfnv "$config_path/agents/AGENTS.md" "$HOME/.claude/CLAUDE.md"
