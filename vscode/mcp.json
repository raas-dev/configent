{
  "servers": {
    "browser-use": {
      "args": [
        "browser-use[cli]",
        "--mcp"
      ],
      "command": "uvx",
      "env": {
        "BROWSER_USE_DISABLE_SECURITY": "false",
        "BROWSER_USE_HEADLESS": "false",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
      }
    },
    "chrome-devtools": {
      "args": [
        "chrome-devtools-mcp@latest"
      ],
      "command": "npx"
    },
    "context7": {
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "command": "npx"
    },
    "tavily": {
      "args": [
        "-y",
        "tavily-mcp"
      ],
      "command": "npx",
      "env": {
        "TAVILY_API_KEY": "${env:TAVILY_API_KEY}"
      }
    }
  }
}
