{
  "mcpServers": {
    "browser-use": {
      "args": ["-y", "envmcp", "uvx", "browser-use[cli]", "--mcp"],
      "command": "npx",
      "env": {
        "BROWSER_USE_HEADLESS": "false",
        "BROWSER_USE_DISABLE_SECURITY": "false"
      }
    },
    "context7": {
      "args": ["-y", "@upstash/context7-mcp"],
      "command": "npx"
    },
    "tavily": {
      "args": ["-y", "envmcp", "npx", "-y", "tavily-mcp"],
      "command": "npx"
    }
  }
}
