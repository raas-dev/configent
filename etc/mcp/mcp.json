{
  "mcpServers": {
    "browser-use": {
      "args": ["browser-use[cli]", "--mcp"],
      "command": "uvx",
      "env": {
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
        "BROWSER_USE_HEADLESS": "false",
        "BROWSER_USE_DISABLE_SECURITY": "false"
      }
    },
    "context7": {
      "args": ["-y", "@upstash/context7-mcp"],
      "command": "npx"
    },
    "tavily": {
      "args": ["-y", "tavily-mcp"],
      "command": "npx",
      "env": {
        "TAVILY_API_KEY": "${env:TAVILY_API_KEY}"
      }
    }
  }
}
