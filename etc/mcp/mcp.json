{
  "mcpServers": {
    "context7": {
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${env:CONTEXT7_API_KEY}"
      }
    },
    "tavily": {
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey=${env:TAVILY_API_KEY}"
    },
    "utcp": {
      "command": "npx",
      "args": ["-y", "@utcp/code-mode-mcp@latest"]
    }
  }
}
