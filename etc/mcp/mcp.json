{
  "mcpServers": {
    "modular-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@kimuson/modular-mcp",
        "${userHome}/.config/configent/mcp/modular-mcp.json"
      ]
    },
    "utcp": {
      "command": "npx",
      "args": ["-y", "@utcp/code-mode-mcp"],
      "env": {
        "UTCP_CONFIG_FILE": "${env:UTCP_CONFIG_FILE}"
      }
    }
  }
}
