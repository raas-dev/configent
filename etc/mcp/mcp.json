{
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest", "--headless=true"]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest",
        "--api-key",
        "${env:CONTEXT7_API_KEY}"
      ]
    },
    "tavily": {
      "command": "npx",
      "args": ["-y", "tavily-mcp@latest"],
      "env": {
        "TAVILY_API_KEY": "${env:TAVILY_API_KEY}"
      }
    },
    "utcp": {
      "command": "npx",
      "args": ["-y", "@utcp/code-mode-mcp@latest"],
      "env": {
        "UTCP_CONFIG_FILE": "~/.config/configent/utcp/.utcp_config.json"
      }
    }
  }
}
