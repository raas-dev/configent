{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "mcp": {},
  "permission": {
    "bash": {
      "sudo *": "deny",
      "git *": "ask",
      "git clean *": "deny",
      "git reset --hard *": "deny",
      "git revert *": "deny",
      "git stash *": "deny",
      "git add *": "allow",
      "git commit *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "rm *": "ask"
    },
    "external_directory": {
      "/tmp/**": "allow",
      "/private/tmp/**": "allow"
    }
  },
  "plugin": [],
  "share": "disabled",
  "theme": "ayu",
  "tui": {
    "scroll_speed": 2
  }
}
