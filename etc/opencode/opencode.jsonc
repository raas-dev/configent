{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "share": "disabled",
  "theme": "ayu",
  "tui": {
    "scroll_speed": 2
  },
  "model": "github-copilot/claude-haiku-4.5",
  "instructions": [
    "CLAUDE.md",
    "GEMINI.md",
    ".cursor/rules/*.mdc",
    ".cursor/rules/**/*.mdc"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}",
      "enabled": true
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "utcp": {
      "type": "local",
      "command": ["npx", "-y", "@utcp/code-mode-mcp"],
      "environment": {
        "UTCP_CONFIG_FILE": "{env:UTCP_CONFIG_FILE}"
      },
      "enabled": true
    }
  }
}
