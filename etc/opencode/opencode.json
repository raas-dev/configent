{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "instructions": [
    "CLAUDE.md",
    "GEMINI.md",
    ".cursor/rules/*.mdc",
    ".cursor/rules/**/*.mdc"
  ],
  "mcp": {
    "context7": {
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "gh-grep": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "tavily": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}"
    },
    "utcp": {
      "command": [
        "npx",
        "-y",
        "@utcp/code-mode-mcp"
      ],
      "enabled": true,
      "environment": {
        "UTCP_CONFIG_FILE": "{env:UTCP_CONFIG_FILE}"
      },
      "type": "local"
    }
  },
  "model": "github-copilot/claude-sonnet-4.5",
  "share": "disabled",
  "theme": "ayu",
  "tui": {
    "scroll_speed": 2
  }
}
