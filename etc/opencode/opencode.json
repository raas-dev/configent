{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "instructions": [
    "CLAUDE.md",
    "GEMINI.md",
    ".cursor/rules/*.mdc",
    ".cursor/rules/**/*.mdc"
  ],
  "mcp": {
    "modular-mcp": {
      "command": [
        "npx",
        "-y",
        "@kimuson/modular-mcp",
        "{env:HOME}/.config/configent/mcp/modular-mcp.json"
      ],
      "enabled": true,
      "type": "local"
    }
  },
  "model": "github-copilot/claude-sonnet-4.5",
  "share": "disabled",
  "theme": "ayu",
  "tui": {
    "scroll_speed": 2
  }
}
