if [ "$(uname -s)" != "Darwin" ]; then
  echo "Error: Not on macOS."
  exit 1
fi

# Fix blurry fonts on non-Retina displays (to revert: set to true)
defaults write -g CGFontRenderingFontSmoothingDisabled -bool false
