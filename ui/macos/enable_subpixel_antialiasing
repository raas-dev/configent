if [ "$(uname -s)" != "Darwin" ]; then
  echo "Error: Not on macOS."
  exit 1
fi

# Re-enable subpixel antialiasing, effective on next login (revert: set to true)
defaults write -g CGFontRenderingFontSmoothingDisabled -bool false

# https://osxdaily.com/2022/04/06/change-remove-font-smoothing-macos/
# 0: disabled, 1: light, 2: medium, 3: heavy, delete: reset
